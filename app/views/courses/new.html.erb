<h2>Add A Class</h2>

<%= form_for @course do |f| %>
  <%= f.text_field :name, placeholder: "Name of the class" %>

  <h4>Office Hours</h4>
  <div id='add_oh'>
    <%= f.fields_for :office_hours do |office_hours_form| %>
      <%= office_hours_form.text_field :location, placeholder: "Location" %>
      <%= office_hours_form.text_field :time, placeholder: "time" %>
    <% end %>
  </div>

  <%= f.submit %>
<% end %>
