<h2><%= @course.name %></h2>
<p>Office Hours: </p>
<%= @course.oh_location %>
<% @course.office_hours.each do |oh| %>
  <p><%= oh.day %> <%= oh.time %></p>

  <% if current_user == @course.user %>
  <p><%= link_to 'delete', office_hour_path(oh), method: :delete %></p>
  <% end %>
<% end %>

<div>
  <% if current_user == @course.user %>
  <%= render 'office_hours/new' %>
  <% end %>
</div>

<div>
  <h4><%= link_to 'Add a Task', new_course_task_path(@course) %></h4>
</div>
