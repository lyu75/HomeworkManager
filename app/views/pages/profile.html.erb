<h4><%= current_user.username %></h4>

<p>My courses</p>
<% current_user.courses.each do |c| %>
  <p><%= link_to c.name, course_path(c) %> | <%= link_to 'Edit', edit_course_path(c) %> | <%= link_to 'Delete', course_path(c), method: :delete %></p>
<% end %>

<p><%= link_to 'Add a class', new_course_path(@course) %></p>
